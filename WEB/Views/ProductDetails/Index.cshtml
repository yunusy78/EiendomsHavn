@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<WEB.DTOs.ProductDetailsDtos.ResultProductDetailsDto>

@{
    ViewBag.Title = "title";
    Layout = "_DefaultLayout";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index">Hjem</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> oppføring</li>
        </ul>
    </div>
</section>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="row">
                @foreach( var item in Model)
                {
                <div class="col-lg-4 col-md-6 listing-img">
                    <a href="/ProductDetails/Details/@item.Id">
                        <div class="box16">
                            <div class="rentext-listing-category"><span>@item.Type</span><span>@item.Name</span></div>
                            <img class="img-fluid" style="height: 200px; width: 600px;" src="@item.ImageUrl" alt="">
                            <div class="box-content">
                                <h3 class="title"> NOK @item.Price.ToString("N0")</h3>
                            </div>
                        </div>
                    </a>
                    <div class="listing-details blog-details align-self">
                        <h4 class="user_title agent">
                            <a href="/ProductDetails/Details/@item.Id">@item.Title</a>
                        </h4>
                        <p class="user_position">@item.Street @item.City @item.PostalCode @item.Country</p>
                        <ul class="mt-3 estate-info">
                            <li><span class="fa fa-bed"></span> @item.BadromCount Bed</li>
                            <li><span class="fa fa-shower"></span> @item.BathCount Baths</li>
                            <li><span class="fa fa-building"></span> @item.BuildYear</li>
                        </ul>
                        <div class="author align-items-center mt-4">
                            <a href="/ProductDetails/Details/@item.Id" class="comment-img">
                                <img  src="@item.EmployeeImageUrl" alt="" class="img-fluid">
                            </a>
                            <ul class="blog-meta">
                                <li>
                                    <a href="/ProductDetails/Details/@item.Id">@item.EmployeeName </a>
                                </li>
                                <li class="meta-item blog-lesson">
                                    <span class="meta-value"> @item.EmployeeTitle</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            </div>

            <!-- pagination -->
            
            
            <div class="pagination-wrapper mt-5 pt-lg-3 text-center">
                <ul class="page-pagination">
                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                        <li><a class="page-numbers @(i == Model.PageNumber ? "current" : "")" href="@Url.Action("Index", "ProductDetails", new { page = i })" style="background-color: @(i == Model.PageNumber ? "#FF9933FF" : "white")">@i</a></li>
                    }
                </ul>
            </div>

         


            <!-- //pagination -->
        </div>
    </div>
</section>
