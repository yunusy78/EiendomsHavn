
@{
    ViewBag.Title = "title";
    Layout = "_DefaultLayout";
}

<div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="" class="">
                                <h3 class="text-primary"><i class="fa fa-home"></i>Eindomshavn</h3>
                            </a>
                            <h3>Reset Password</h3>
                        </div>
                        <form asp-controller="ForgotPassword" asp-action="ResetPassword" asp-area="" method="post">
                            <div class="form-floating mb-3">
                                <input type="hidden" value="@ViewBag.ResetToken" name="resetToken" class="form-control">
                                <input type="password" name="newPassword" class="form-control" id="floatingInput" placeholder="NewPassword">
                            </div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Submit</button>
                        </form>
                        <p class="text-center mb-0">Don't have an Account? <a href="/RegisterUser/Index">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
