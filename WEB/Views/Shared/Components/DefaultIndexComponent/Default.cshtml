<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Det er flott å være hjemme!</p>
                    <h2>Finn en eiendom i dag</h2>
                    <div class="most-searches">
                        <h4>Mest søkte</h4>
                        <ul> 
                           <li><a href="/ProductDetails/Index?search2=Enebolig">Enebolig</a></li>
                           <li><a href="/ProductDetails/Index?search2=Leilighet">Leilighet</a></li>
                           <li><a href="/ProductDetails/Index?search2=Hybel">Hybel</a></li>
                        </ul>
                    </div>
                    <form action="/ProductDetails/Index" class="w3l-cover-3-gd" method="GET">
                        <input type="search" name="search2" placeholder="Søk etter eiendom" >
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="type" >
                                <option value="">Eindomstype</option>
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.Text">@item.Text</option>
                                }
                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select name="search" class="btn btn-default">
                                <option value=""> Velg By</option>
                                @foreach (var item in ViewBag.Cities)
                                {
                                    <option value="@item.Text">@item.Text</option>
                                }
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Søk</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>Rull ned</a>
                </section>
            </div>
        </div>
    </div>
</section>


