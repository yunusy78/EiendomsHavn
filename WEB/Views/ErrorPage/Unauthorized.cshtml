@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_DefaultLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-md-6 text-center p-4">
            <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
            <h1 class="display-1 fw-bold">@ViewBag.Code</h1>
            <h2 class="mb-4">@ViewBag.ErrorMessage</h2>
            <p class="mb-4">Beklager, du har ikke tilgang til denne siden. Vennligst logg inn med riktige referanser eller gå tilbake til startsiden.</p>
            <a class="btn btn-primary rounded-pill py-3 px-5" href="/Default/Index">Gå tilbake til startsiden</a>
        </div>
    </div>
</div>
