@model EindomsHavn.DTOs.CategoryDtos.GetByIdCategoryDto?

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<html>
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Oppdater Category</h3>
            <form asp-controller="Category" asp-action="Update" asp-area="Admin" method="post">
                <input asp-for="CategoryId" type="hidden" class="form-control" >
                <input asp-for="CreatedAt" type="hidden" class="form-control" >
                <div class="form-group">
                    <input asp-for="Name" class="form-control" placeholder="CategoryName" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="CategoryDescription" class="form-control" placeholder="Beskrivelse" required>
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label for="Status">Status:</label>
                    <div class="form-check">
                        <input asp-for="Status" class="form-check-input" type="radio" id="statusTrue" value="true">
                        <label class="form-check-label" for="statusTrue">True</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Status" class="form-check-input" type="radio" id="statusFalse" value="false">
                        <label class="form-check-label" for="statusFalse">False</label>
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <br/>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>



