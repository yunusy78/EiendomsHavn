@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<WEB.DTOs.ProductDetailsDtos.ResultProductDetailsDto>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html>
<body>
<div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>ProductDetails</h5>
                        <div class="ibox-tools">
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background: #0dcaf0">
                                    <tr>
                                        <th>Id</th>
                                        <th>ProductId</th>
                                        <th>Title</th>
                                        <th>Price</th>
                                        <th>Type</th>
                                        <th>City</th>
                                        <th>Country</th>
                                        <th>Street</th>
                                        <th>VideoUrl</th>
                                        <th>Size</th>
                                        <th>BuildYear</th>
                                        <th>GarageSize</th>
                                        <th>RomCount</th>
                                        <th>BathCount</th>
                                        <th>BadromCount</th>
                                        <th>CategoryName</th>
                                        <th>EmployeeName</th>
                                        <th>EmployeeEmail</th>
                                        <th>Action</th>
                                         <th>Action</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.ProductId</td>
                                            <td>@product.Title</td>
                                            <td>@product.Price</td>
                                            <td>@product.Type</td>
                                            <td>@product.City</td>
                                            <td>@product.Country</td>
                                            <td>@product.Street</td>
                                            <td>@product.VideoUrl</td>
                                            <td>@product.Size</td>
                                            <td>@product.BuildYear</td>
                                            <td>@product.GarageSize</td>
                                            <td>@product.RomCount</td>
                                            <td>@product.BathCount</td>
                                            <td>@product.BadromCount</td>
                                            <td>@product.Name</td>
                                            <td>@product.EmployeeName</td>
                                            <td>@product.EmployeeEmail</td>
                                            <td>
                                                <button type="button" class="btn btn-primary" onclick="editproduct('@product.Id')"> <i class="fa fa-edit"></i> Edit</button>
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-danger" onclick="return confirmDelete('@product.Id')"><i class="fa fa-trash"></i> Delete</button>
                                            </td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", "ProductDetails", new { area = "Admin", page }))

<script>
 function editproduct(Id) {
       
        window.location.href = "/Admin/ProductDetails/Update/" + Id;
    }
    function confirmDelete(Id) {
        var confirmMessage = "Are you sure you want to delete this category?";
        if (confirm(confirmMessage)) {
            window.location.href = "/Admin/ProductDetails/Delete/" + Id;
        }
        return false;
    }
</script>

