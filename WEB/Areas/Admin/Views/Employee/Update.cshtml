@model WEB.DTOs.AboutDtos.ResultEmployeeDto?

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Oppdater Employee</h3>
            <form asp-controller="Employee" asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input asp-for="EmployeeId" type="hidden" class="form-control">
                <div class="form-group">
                    <input asp-for="EmployeeName" class="form-control" placeholder="EmployeeName" required>
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="EmployeeTitle" class="form-control" placeholder="Tittel" required>
                    <span asp-validation-for="EmployeeTitle" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="EmployeeEmail" class="form-control" placeholder="E-Post" required>
                    <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="EmployeePhoneNumber" class="form-control" placeholder="TelefonNumber" required>
                    <span asp-validation-for="EmployeePhoneNumber" class="text-danger"></span>
                </div>
                <br/>
                <div class="mb-3">
                    <label>ImageUrl</label>
                    <input type="file" id="uploadBox" name="file" class="form-control"/>
                    <span asp-validation-for="EmployeeImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Status">Status:</label>
                    <div class="form-check">
                        <input asp-for="EmployeeStatus" class="form-check-input" type="radio" id="statusTrue" value="true">
                        <label class="form-check-label" for="statusTrue">True</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="EmployeeStatus" class="form-check-input" type="radio" id="statusFalse" value="false">
                        <label class="form-check-label" for="statusFalse">False</label>
                    </div>
                </div>
                <input asp-for="EmployeeImageUrl" type="hidden" class="form-control">
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>