@model X.PagedList.IPagedList<WEB.DTOs.ProductDtos.ResultProductDto>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int j=0;
}


<!DOCTYPE html>
<html>
<body>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Product</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead style="background: #0dcaf0">
                            <tr>
                                <th>#</th>
                                <th>ProductId</th>
                                <th>ImageUrl</th>
                                <th>CoverImageUrl</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Type</th>
                                <th>City</th>
                                <th>Country</th>
                                <th>Street</th>
                                <th>CreatedAt</th>
                                <th>Status</th>
                                <th>Name</th>
                                <th>Action</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                
                            @foreach (var product in Model)
                            {
                                <tr>
                                    @{j++;} 
                                    <td><strong>@j</strong></td>
                                    <td>@product.ProductId</td>
                                    <td><img src="@product.ImageUrl" alt="Avatar" class="rounded-circle" style="max-width: 100px; max-height: 100px;"/></td>
                                    <td><img src="@product.CoverImageUrl" alt="Avatar" class="rounded-circle" style="max-width: 100px; max-height: 100px;"/></td>
                                    <td>@product.Title</td>
                                    <td>@product.Price</td>
                                    <td>@product.Type</td>
                                    <td>@product.City</td>
                                    <td>@product.Country</td>
                                    <td>@product.Street</td>
                                    <td>@product.CreatedAt</td>
                                    <td>@product.Status</td>
                                    <td>@product.Name</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" onclick="editproduct('@product.ProductId')"> <i class="fa fa-edit"></i> Edit</button>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-danger" onclick="return confirmDelete('@product.ProductId')"><i class="fa fa-trash"></i> Delete</button>
                                    </td>
                                    <td></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>
<br/>
<div class="btn-group me-2" role="group" aria-label="First group">
               
    @for (var i = 1; i <= Model.PageCount; i++)
    {
        <button type="button" class="btn btn-primary @(i == Model.PageNumber ? "current" : "")" style="background-color: @(i == Model.PageNumber ? "#0dcaf0" : "White"); color: #0b0b0b" onclick="location.href='@Url.Action("Index", "Product", new { area = "Admin", page = i })'">@i</button>

    }
               
</div>
<br/>
<br/>
<div>
<a href="/Admin/Product/Create" class="btn btn-primary">
    <i class="fa fa-plus"></i> Add New Product
</a>
</div>
<script>
 function editproduct(Id) {
       
        window.location.href = "/Admin/Product/Update/" + Id;
    }
    function confirmDelete(Id) {
        var confirmMessage = "Are you sure you want to delete this category?";
        if (confirm(confirmMessage)) {
            window.location.href = "/Admin/Product/Delete/" + Id;
        }
        return false;
    }
</script>

