@model EiendomsHavn.DTOs.ProductDtos.CreateProductDto


@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Legg til nytt produkt</h3>
            <form asp-controller="Product" asp-action="Create" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="Title" class="form-control" placeholder="Tittel" required>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="Description" class="form-control" placeholder="Beskrivelse" required>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br/>
               <div class="form-group">
                   <label for="Type">Type:</label>
                   <select asp-for="Type" class="form-control">
                       <option value="Til Salgs">Til Salgs</option>
                       <option value="Til Leie">Til Leie</option>
                   </select>
               </div>
                <br/>
                <div class="form-group">
                    <input asp-for="Price" class="form-control" placeholder="Pris" type="number">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="Street" class="form-control" placeholder="Gate">
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="City" class="form-control" placeholder="By">
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="PostalCode" class="form-control" placeholder="Postnummer">
                </div>
                <br/>
                <div class="form-group">
                    <input asp-for="Country" class="form-control" placeholder="Land">
                </div>
                <br/>
                <div class="mb-3">
                    <label>ImageUrl</label>
                    <input type="file" id="uploadBox" name="file1" class="form-control"/>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>CoverImageUrl</label>
                    <input type="file" id="uploadBox" name="file2" class="form-control"/>
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="CategoryId">Category:</label>
                    @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                </div>
                <br/>
                <div class="form-group">
                    <label  asp-for="EmployeeId">Ansatte:</label>
                    @Html.DropDownListFor(x=>x.EmployeeId, (List<SelectListItem>)ViewBag.Employees, new { @class = "form-control" })
                </div>
                 <br/>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-save"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>

