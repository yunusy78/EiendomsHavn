@model EindomsHavnAPI.DTOs.ContactDtos.UpdateContactDto

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<html>
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h3 class="text-center">Oppdater Contact</h3>
            <form asp-controller="Contact" asp-action="Update" asp-area="Admin" method="post" >
                <input asp-for="Id" type="hidden" class="form-control">
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="ContactName" class="form-control" placeholder="Name" required>
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label>E-Post</label>
                    <input asp-for="Email" class="form-control" placeholder="E-Post" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label>Melding</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Melding" required> </textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <label for="Status">Status:</label>
                    <div class="form-check">
                        <input asp-for="Status" class="form-check-input" type="radio" id="statusTrue" value="true">
                        <label class="form-check-label" for="statusTrue">True</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Status" class="form-check-input" type="radio" id="statusFalse" value="false">
                        <label class="form-check-label" for="statusFalse">False</label>
                    </div>
                </div>
                <input asp-for="CreatedAt" type="hidden" class="form-control">
                <div class="text-center">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Lagre</button>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>
</body>
</html>
